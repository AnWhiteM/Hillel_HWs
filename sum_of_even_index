import random

new_lst = random.sample(range(0, 10), 4)
print(new_lst)
ln = len(new_lst)
evens = new_lst[0::2]
sum = 0
if ln != 0:

     for i in evens:
        sum = i + sum
        print("even element: " + str(i))

        print('last element: ' + str(new_lst[-1]))
        result = sum * new_lst[-1]
        print("Result: " + str(result))

else:
    print("Result: 0" )


# Интерфейс программы немного кривой, но в принципе она работает
